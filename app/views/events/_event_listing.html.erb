<%= link_to event_path(event.id), class: "event-item" do %>
  <% if event.image.present? %>
  <% end %>
  <div class="event-information">
    <h3 class="event-headline"><%= event.headline %></h3>

    <div class="event-row">
      <div class="event-detail">
        <div class="visual-label"><%= t("events.labels.speaker") %></div>
        <%= event.speaker %>
      </div>
    <% if event.company.present? %>
      <div class="event-detail">
        <div class="visual-label"><%= t("events.labels.company") %></div>
        <%= event.company %>
      </div>
    <% end %>
    </div>

    <div class="event-row">
      <div class="event-detail">
        <div class="visual-label"><%= t("events.labels.abstract") %></div>
        <%= event.abstract %>
      </div>
    </div>

    <div class="event-row">
      <div class="event-detail">
        <div class="visual-label"><%= t("events.labels.time") %></div>
        <%= event.full_time %>
      </div>
      <div class="event-detail">
        <div class="visual-label"><%= t("events.labels.location") %></div>
        <%= event.location %>
      </div>
    </div>
  </div>
<%  end %>
