<div class="container">
  <%= form_for @event, html: { class: "form-wrapper event-form" } do |f| %>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :headline %>
        <%= f.text_field :headline %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :abstract %>
        <%= f.text_area :abstract %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :date_time %>
        <%= f.datetime_local_field :date_time %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :speaker %>
        <%= f.text_field :speaker %>
      </div>
      <div class="form-input">
        <%= f.label :company %>
        <%= f.text_field :company %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :room %>
        <%= f.text_field :room, value: default_meeting_details.location.room %>
      </div>
      <div class="form-input">
        <%= f.label :building %>
        <%= f.text_field :building, value: default_meeting_details.location.building %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-input">
        <%= f.label :address %>
        <%= f.text_field :address, value: default_meeting_details.location.address %>
      </div>
    </div>
    <%= f.submit class: "button" %>
  <% end %>
</div>
